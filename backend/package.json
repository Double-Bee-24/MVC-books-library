{
  "name": "3.2-mvc-books-library",
  "version": "1.0.0",
  "proxy": "http://localhost:5000",
  "description": "Book Library Management System",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write .",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "start:prod": "cross-env NODE_ENV=prod node --env-file=.env dist/server.js",
    "start:dev": "cross-env NODE_ENV=dev node --trace-warnings --watch --env-file=.env --experimental-strip-types src/server.ts",
    "build-and-start": "npm run build && npm run start:prod",
    "lint": "eslint --config eslint.config.mjs \"src/**/*.{js,ts}\"",
    "lint:fix": "eslint --config eslint.config.mjs --fix \"src/**/*.{js,ts}\"",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cron": "^4.3.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.1",
    "node-cron": "^4.0.5",
    "pino": "^9.7.0",
    "pino-http": "^10.4.0",
    "pino-logflare": "^0.4.2",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.20",
    "@types/node-cron": "^3.0.11",
    "cross-env": "^7.0.3",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  }
}
